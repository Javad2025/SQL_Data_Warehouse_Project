-- ğŸŸ¢ STEP 1: CHECK FOR DUPLICATES AND NULL VALUES IN `prd_id`
-- -------------------------------------------------------------
-- ğŸ¯ **Why?** `prd_id` should be unique and not NULL.
-- âœ… **Expectation:** Query should return **0 rows** if no issues exist.

SELECT
    prd_id,
    COUNT(*)
FROM bronze.crm_prd_info
GROUP BY prd_id
HAVING COUNT(*) > 1 OR prd_id IS NULL;

-- ğŸŸ¢ STEP 2: CHECK FOR UNWANTED SPACES IN `prd_nm`
-- -------------------------------------------------------------
-- ğŸ¯ **Why?** Ensures consistency in `prd_nm` values by trimming spaces.
-- âœ… **Expectation:** Query should return **0 rows** if all names are correctly formatted.

SELECT prd_nm
FROM bronze.crm_prd_info
WHERE prd_nm != TRIM(prd_nm);

-- ğŸŸ¢ STEP 3: VALIDATE `prd_cost` COLUMN (NON-NEGATIVE & NOT NULL)
-- ---------------------------------------------------------------
-- ğŸ¯ **Why?** Product cost should never be negative or NULL.
-- âœ… **Expectation:** Query should return **0 rows** if values are valid.

SELECT 
    prd_cost
FROM bronze.crm_prd_info
WHERE prd_cost < 0 OR prd_cost IS NULL;

-- ğŸŸ¢ STEP 4: TRANSFORM & CLEAN DATA BEFORE INSERTING INTO SILVER TABLE
-- --------------------------------------------------------------------
-- ğŸ¯ **Why?**  
-- ğŸ”¹ **Standardize category ID (`cat_id`)** by replacing `-` with `_` in `prd_key`  
-- ğŸ”¹ **Extract main product key (`prd_key`)** by removing the first 6 characters  
-- ğŸ”¹ **Ensure `prd_cost` is never NULL** (replace with `0` using `COALESCE()`)  
-- ğŸ”¹ **Map short product line codes (`M`, `R`, `S`, `T`)** to full names  
-- ğŸ”¹ **Convert `prd_start_dt` & `prd_end_dt` to DATE format**  

SELECT
    prd_id,
    prd_key,
    REPLACE(SUBSTRING(prd_key, 1, 5), '-','_') AS cat_id,  -- ğŸ”¹ Standardized category ID
    SUBSTRING(prd_key FROM 7 FOR LENGTH(prd_key)) AS prd_key,  -- ğŸ”¹ Extract main product key
    prd_nm,
    COALESCE(prd_cost, 0) AS prd_cost,  -- ğŸ”¹ Ensure cost is never NULL
    CASE 
        WHEN UPPER(TRIM(prd_line)) = 'M' THEN 'Mountain'
        WHEN UPPER(TRIM(prd_line)) = 'R' THEN 'Road'
        WHEN UPPER(TRIM(prd_line)) = 'S' THEN 'Other Sales'
        WHEN UPPER(TRIM(prd_line)) = 'T' THEN 'Touring'
        ELSE 'n/a'
    END AS prd_line,  -- ğŸ”¹ Standardized product line
    CAST(prd_start_dt AS DATE) AS prd_start_dt,  -- ğŸ”¹ Convert to DATE format
    CAST(LEAD(prd_start_dt) OVER (PARTITION BY prd_key ORDER BY prd_start_dt - INTERVAL '1 day') AS DATE) AS prd_end_dt  
    -- ğŸ”¹ Assigns the next productâ€™s start date as this product's end date
FROM bronze.crm_prd_info;

-- ğŸŸ¢ STEP 5: CREATE `silver.crm_prd_info` TABLE
-- ---------------------------------------------
-- ğŸ¯ **Why?** Create the Silver Layer table without changing your schema.

DROP TABLE IF EXISTS silver.crm_prd_info;
CREATE TABLE silver.crm_prd_info (
    prd_id INT, 
    cat_id VARCHAR(50),
    prd_key VARCHAR(50),
    prd_nm VARCHAR(50),       
    prd_cost INT, 
    prd_line VARCHAR(50),               
    prd_start_dt DATE,             
    prd_end_dt DATE,
    dwh_create_date TIMESTAMP DEFAULT CURRENT_TIMESTAMP  
);

-- ğŸŸ¢ STEP 6: INSERT CLEANED DATA INTO THE SILVER TABLE
-- ---------------------------------------------------
-- ğŸ¯ **Why?** Load transformed data into the Silver Layer.
TRUNCATE TABLE silver.crm_prd_info
INSERT INTO silver.crm_prd_info (
    prd_id, 
    cat_id,
    prd_key,
    prd_nm,       
    prd_cost, 
    prd_line,               
    prd_start_dt,             
    prd_end_dt
)
SELECT
